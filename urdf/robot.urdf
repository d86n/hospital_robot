<?xml version="1.0" ?>
<robot name="my-robot">
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="body"/>
    <origin xyz="0 0 0.31" rpy="0 0 0"/> 
  </joint>

  <link name="body">
    <inertial>
      <origin xyz="-0.151116 0.399606 0.0581464" rpy="0 0 0"/>
      <mass value="57.976"/>
      <inertia ixx="8.74891" ixy="-6.69946e-07" ixz="4.47173e-06" iyy="8.88386" iyz="-0.454021" izz="1.73978"/>
    </inertial>
    <visual>
      <origin xyz="-0.151116 0.376898 -0.265217" rpy="0 -0 2.42861e-16"/>
      <geometry>
        <mesh filename="package://hospital_robot/meshes/body.stl"/>
      </geometry>
      <material name="body_material">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="-0.151116 0.376898 -0.265217" rpy="0 -0 2.42861e-16"/>
      <geometry>
        <mesh filename="package://hospital_robot/meshes/body.stl"/>
      </geometry>
    </collision>
  </link>

  <link name="standard_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.465"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.01" rpy="1.5708 1.5708 0"/>
      <geometry>
        <mesh filename="package://hospital_robot/meshes/standard_wheel.stl"/>
      </geometry>
      <material name="standard_wheel_material">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.01" rpy="1.5708 1.5708 0"/>
      <geometry>
        <mesh filename="package://hospital_robot/meshes/standard_wheel.stl"/>
      </geometry>
    </collision>
  </link>

  <joint name="front_left_wheel_joint" type="continuous">
    <origin xyz="0.0788842 0.476898 -0.250217" rpy="-1.5708 -0 1.5708"/>
    <parent link="body"/>
    <child link="standard_wheel"/>
    <axis xyz="0 0 1"/>
    <limit effort="20" velocity="20"/>
  </joint>

  <link name="standard_wheel_2">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.465"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.01" rpy="-1.5708 1.5708 0"/>
      <geometry>
        <mesh filename="package://hospital_robot/meshes/standard_wheel.stl"/>
      </geometry>
      <material name="standard_wheel_2_material">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.01" rpy="-1.5708 1.5708 0"/>
      <geometry>
        <mesh filename="package://hospital_robot/meshes/standard_wheel.stl"/>
      </geometry>
    </collision>
  </link>

  <joint name="front_right_wheel_joint" type="continuous">
    <origin xyz="-0.381116 0.476898 -0.250217" rpy="1.5708 -0 1.5708"/>
    <parent link="body"/>
    <child link="standard_wheel_2"/>
    <axis xyz="0 0 -1"/>
    <limit effort="20" velocity="20"/>
  </joint>

  <link name="spherical_wheel">
    <inertial>
      <mass value="2.48"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.0425" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://hospital_robot/meshes/spherical_wheel.stl"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 -0.0425" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://hospital_robot/meshes/spherical_wheel.stl"/>
      </geometry>
    </collision>
  </link>
  
  <joint name="joint_spherical_wheel" type="fixed">
    <origin xyz="-0.151116 0.201898 -0.265217" rpy="0 0 0"/>
    <parent link="body"/>
    <child link="spherical_wheel"/>
  </joint>

  <gazebo reference="spherical_wheel">
    <mu1>0.0</mu1>
    <mu2>0.0</mu2>
    <material>Gazebo/Grey</material>
  </gazebo>

  <link name="lidar_link"/>
  <joint name="lidar_joint" type="fixed">
      <parent link="body"/>         
      <child link="lidar_link"/>
      <origin xyz="-0.148 0.4 0.5" rpy="0 0 0"/> 
  </joint>

  <gazebo reference="lidar_link">
    <sensor type="ray" name="head_hokuyo_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize> 
      <update_rate>20</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.2</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
        <topicName>/scan</topicName>
        <frameName>lidar_link</frameName>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>20</updateRate>
      
      <leftJoint>front_left_wheel_joint</leftJoint>
      <rightJoint>front_right_wheel_joint</rightJoint>
      
      <wheelSeparation>0.4</wheelSeparation> 
      <wheelDiameter>0.2</wheelDiameter>   
      <wheelTorque>20</wheelTorque>
      <wheelAcceleration>1.0</wheelAcceleration>
      
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_footprint</robotBaseFrame>
      
      <publishWheelTF>false</publishWheelTF>
      <publishOdomTF>true</publishOdomTF>
      <publishWheelJointState>true</publishWheelJointState>
    </plugin>
  </gazebo>
</robot>